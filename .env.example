# Database Configuration
# Set USE_LOCAL_DB=true to use local PostgreSQL, false to use Docker PostgreSQL
USE_LOCAL_DB=false

# Docker PostgreSQL Configuration (current setup)
POSTGRES_USER=timetrack_user
POSTGRES_PASSWORD=timetrack_password
POSTGRES_DB=timetrack_db
DATABASE_URL=postgresql://timetrack_user:timetrack_password@postgres:5432/timetrack_db

# Local PostgreSQL Configuration
# Update these with your local database credentials when USE_LOCAL_DB=true
LOCAL_POSTGRES_HOST=host.docker.internal
LOCAL_POSTGRES_PORT=5432
LOCAL_POSTGRES_USER=your_local_username
LOCAL_POSTGRES_PASSWORD=your_local_password
LOCAL_POSTGRES_DB=timetrack_local_db
LOCAL_DATABASE_URL=postgresql://your_local_username:your_local_password@host.docker.internal:5432/timetrack_local_db

# JWT Secret
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Supabase Configuration
SUPABASE_URL=your-supabase-project-url
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_ANON_KEY=your-supabase-anon-key

# OpenAI Configuration (for AI insights)
OPENAI_API_KEY=your-openai-api-key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Microsoft Teams Integration
TEAMS_WEBHOOK_URL=your-teams-webhook-url

# ACE Timesheet Integration
ACE_API_BASE_URL=your-ace-api-base-url
ACE_API_KEY=your-ace-api-key

# Environment
ENVIRONMENT=development
